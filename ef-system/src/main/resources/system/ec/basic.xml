<?xml version="1.0" encoding="UTF-8"?>


<!--用户-->
<module name="basic" label="basic" version="" package="com.efeiyi.ec.basic" path="">

    <entities>
        <entity name="bannerList" label="banner"
                basic="simple" others=""
                model="com.efeiyi.ec.basic.model.Banner">
            <does>
                <do name="plistBanner" access="" label="banner列表"
                    result="/banner/bannerPList">
                    <query name="default" label="默认" type="auto" orderBy="id:desc">
                        <condition name="id" defaultValue="1" operation="eq"></condition>
                    </query>
                </do>

                <do name="removeBanner" label="删除banner" access="" result="json"/>
                <do name="formBanner" label="保存banner" access="" result="/banner/bannerForm"></do>
                <do name="saveOrUpdateBanner" label="保存banner" access="" result="/banner/bannerSaveSuccess"></do>
                <do name="listBanner" label="banner列表" access="" result="/banner/bannerList">
                    <query name="default" label="默认" type="auto" orderBy="id:desc">
                        <condition label="banner主键" name="id" defaultValue="1" operation="eq"/>
                    </query>
                </do>

            </does>
        </entity>

    </entities>

    <entities>
        <entity name="projectNewsList" label="百科新闻"
                basic="simple" others=""
                model="com.efeiyi.ec.wiki.model.ProjectNews">
            <fields>
                <field name="id" label="百科新闻id" inputType="text"/>
                <field name="content" label="百科新闻" inputType="text"/>
            </fields>
            <does>
                <do name="plistProjectNews" access="" label="百科新闻分页列表"
                    result="/projectNews/projectNewsPList">
                    <query name="default" label="默认" type="auto" orderBy="id:desc">
                        <condition name="content" defaultValue="1" operation="eq"></condition>
                    </query>
                </do>

                <do name="removeProjectNews" label="删除百科内容" access="" result="json"/>
                <do name="formProjectNews" label="保存百科内容" access="" result="/ProjectNews/projectNewsForm"></do>
                <do name="saveOrUpdateProjectNews" label="保存百科内容" access="" result="/ProjectNews/projectNewsSaveSuccess"></do>
                <do name="listProjectNews" label="百科内容列表" access="" result="/ProjectNews/projectNewsList">
                    <query name="default" label="默认" type="auto" orderBy="id:desc">
                        <condition label="百科内容主键" name="id" defaultValue="1" operation="eq"/>
                    </query>
                </do>

            </does>
        </entity>

    </entities>

</module>