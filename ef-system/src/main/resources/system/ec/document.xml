<?xml version="1.0" encoding="UTF-8"?>


<!--用户-->
<module name="document" label="document" version="" package="com.ming800.core.p.model" path="">

    <entities>
        <entity name="Document" label="Document"
                basic="simple" others=""
                model="com.ming800.core.p.model.Document">
            <does>
                <do name="plistDocument" access="" label="Document列表"
                    result="/document/documentPList">
                    <query name="default" label="默认" type="auto" orderBy="id:desc">
                      <!--  <condition name="status" defaultValue="1" operation="eq"/> -->
                    </query>
                    <query name="tenant" label="默认" type="auto" orderBy="id:desc">
                         <condition name="group" defaultValue="tenant" operation="eq"/>
                    </query>
                </do>

                <do name="removeDocument" label="删除document" access="" result="json"/>
                <do name="formDocument" label="保存document" access="" result="/document/documentForm">
                </do>
                <do name="saveOrUpdateDocument" label="保存Document" access="" result="/document/documentSaveSuccess"/>
                <do name="listCategory" label="category列表" access="" result="/category/categoryList">
                    <query name="default" label="默认" type="auto" orderBy="id:desc">
                        <condition label="category主键" name="id" defaultValue="1" operation="eq"/>
                    </query>
                </do>

            </does>
        </entity>
    </entities>
</module>