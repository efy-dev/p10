                        <fields>
                            <!--<field name="ptype"  dataType="int" defaultValue="0"></field>-->
                            <field name="theStatus" dataType="int" defaultValue="1"></field>
                            <field name="photographer" defaultValue="${MY_USER}" dataType="default"/>
