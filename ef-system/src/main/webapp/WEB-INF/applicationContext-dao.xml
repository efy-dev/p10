    <!--<bean id="promotionPlanDao" class="com.efeiyi.jh.dao.promotionPlan.hibernate.PromotionPlanDaoHibernate"/>-->

    <bean id="virtualPlanManagerImpl" class="com.efeiyi.ec.system.zero.virtualplan.service.impl.VirtualPlanManagerImpl"/>
    <bean id="virtualPlanDao" class="com.efeiyi.ec.system.zero.virtualplan.dao.hibernate.VirtualPlanDaoHibernate"/>

