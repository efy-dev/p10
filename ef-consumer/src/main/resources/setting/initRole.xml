<?xml version="1.0" encoding="utf-8"?>
<roles>
    <!-- //1具有超级权限  2不具有超级权限 -->

    <role name="前台" superPermission="2">
        <permission name="news_va"/>
        <!--查看全部新闻-->
        <permission name="message_n,message_va,message_vm,message_em,message_dm"/>
        <!--消息-->
        <permission name="student_n"/>
        <!--新建学生-->
        <permission name="lead_n,lead_vm"/>
        <!--新建/查看我的线索-->
    </role>

    <role name="教师" superPermission="2">
        <permission name="news_va"/>
        <!--查看全部新闻-->
        <permission name="message_n,message_va,message_vm,message_em,message_dm"/>
        <!--消息-->
        <permission name="student_vm"/>
        <!--查看我的学生-->
    </role>

    <role name="财务" superPermission="2">
        <permission name="news_va"/>
        <!--查看全部新闻-->
        <permission name="message_n,message_va,message_vm,message_em,message_dm"/>
        <!--消息-->
        <permission name="chargeAccounting_n,chargeAccounting_vm"/>
        <!--新建收费/查看我的收费-->
    </role>

    <role name="管理员" superPermission="1"/>
    <!-- 管理员 具有超级权限-->

    <role name="校长" superPermission="1"/>
    <!-- 校长 具有超级权限-->

</roles>