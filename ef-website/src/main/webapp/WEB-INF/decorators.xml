<decorators defaultdir="/decorators">
    <excludes>
        <pattern>/*ajax=true*</pattern>
        <pattern>*/*.htm*</pattern>
        <pattern>/WEB-INF/springmvc/index.jsp</pattern>
        <pattern>/index.do*</pattern>
        <pattern>/main.do*</pattern>
        <pattern>/userDefinedPortlet/listMyDefinedPortlet.do*</pattern>
        <pattern>/home.do*</pattern>
        <pattern>/basic/generateQueryHtml.do*</pattern>
        <pattern>/basic/xm.do?qm=formCall*</pattern>
