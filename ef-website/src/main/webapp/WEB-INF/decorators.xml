        <pattern>/website/*.jsp*</pattern>
    </decorator>
    <decorator name="registerDec" page="manage/registerDec.jsp">
        <pattern>/reg/*.do*</pattern>
    </decorator>
    <decorator name="spinachDec" page="manage/spinachDec.jsp">
